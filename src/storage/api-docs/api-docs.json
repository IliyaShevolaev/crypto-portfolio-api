    "components": {
        "schemas": {
            "TransactionRequest": {
                "properties": {
                    "coin_name": {
                        "description": "Name of the cryptocurrency involved in the transaction",
                        "type": "string"
                    },
                    "description": {
                        "description": "A description of the transaction",
                        "type": "string"
                    },
                    "amount": {
                        "description": "Amount of the cryptocurrency involved in the transaction",
                        "type": "number",
                        "format": "float"
                    },
                    "is_buying": {
                        "description": "Indicates whether the transaction is a buy (true) or sell (false)",
                        "type": "boolean"
                    },
                    "portfolio_id": {
                        "description": "ID of the portfolio associated with the transaction",
                        "type": "integer"
                    },
                    "transaction_date": {
                        "description": "Date and time when the transaction occurred (format: dd-mm-yyyy)",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "PortfolioResource": {
                "properties": {
                    "id": {
                        "description": "ID of the portfolio",
                        "type": "integer"
                    },
                    "name": {
                        "description": "Name of the portfolio",
                        "type": "string"
                    },
                    "balance": {
                        "description": "Balance of the portfolio, as a string with a '$' symbol",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Portfolio creation time",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated": {
                        "description": "Portfolio last update time",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Transaction": {
                "properties": {
                    "id": {
                        "description": "Id of transaction",
                        "type": "number"
                    },
                    "coin_name": {
                        "description": "Name of the cryptocurrency involved in the transaction",
                        "type": "string"
                    },
                    "description": {
                        "description": "A description of the transaction",
                        "type": "string"
                    },
                    "amount": {
                        "description": "Amount of the cryptocurrency involved in the transaction",
                        "type": "number",
                        "format": "float"
                    },
                    "price_at_buy_moment": {
                        "description": "Price of the cryptocurrency at the moment of the transaction",
                        "type": "number",
                        "format": "float"
                    },
                    "total_value_in_usd": {
                        "description": "Total value of the transaction in USD",
                        "type": "number",
                        "format": "float"
                    },
                    "is_buying": {
                        "description": "Indicates whether the transaction is a buy (true) or sell (false)",
                        "type": "boolean"
                    },
                    "portfolio_id": {
                        "description": "ID of the portfolio associated with the transaction",
                        "type": "integer"
                    },
                    "transaction_date": {
                        "description": "Date and time when the transaction occurred",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "Sanctum Auth": {
